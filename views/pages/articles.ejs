<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../partials/header'); %></header>

    <main>
      <div class="jumbotron">
        <h1>Blog Articles</h1>
      </div>
    </main>

    <div class="container">
      <a href="/articles/new" class="btn btn-success">New Article</a>

      <% articles.forEach(article => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= article.title %></h4>
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <br />
          <div class="card-subtitle h6 mb-2">LÃ¼hike kirjeldus:</div>
          <div class="card-text mb-2"><%= article.description %></div>
          <br />
          <div class="card-subtitle h6 mb-2">Pikk kirjeldus:</div>
          <div class="card-text mb-2"><%= article.markdown %></div>
          <a href="articles/edit/<%= article.id %>" class="btn btn-info"
            >Edit</a
          >
          <form
            action="/articles/<%= article.id %>?_method=DELETE"
            method="POST"
            class="d-inline"
          >
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>

    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
